<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.t10.HelloController">
    <TableView fx:id="productTable">
        <columns>
            <TableColumn text="ID" prefWidth="50" fx:id="idColumn"/>
            <TableColumn text="Название" prefWidth="150" fx:id="nameColumn"/>
            <TableColumn text="Количество" prefWidth="100" fx:id="quantityColumn"/>
            <TableColumn text="Тег" prefWidth="100" fx:id="tagColumn"/>
        </columns>
    </TableView>
    <HBox spacing="10">
        <Button text="Добавить" onAction="#handleAddProduct"/>
        <Button text="Обновить" onAction="#handleUpdateProduct"/>
        <Button text="Удалить" onAction="#handleDeleteProduct"/>
    </HBox>
</VBox>